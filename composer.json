{
    "name": "fiqhidayat/wp-validator",
    "description": "Laravel-style validation library for WordPress",
    "type": "library",
    "keywords": [
        "wordpress",
        "validation",
        "form",
        "validator",
        "laravel"
    ],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Taufik Hidayat",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.3"
    },
    "autoload": {
        "psr-4": {
            "Fiqhidayat\\WPValidator\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
